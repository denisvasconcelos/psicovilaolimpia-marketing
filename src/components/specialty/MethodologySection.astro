---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

export interface Props {
  methodology: {
    title: string;
    content: string;
    highlights: Array<string>;
  };
  specialtyTitle: string;
}

const { methodology, specialtyTitle } = Astro.props;
---

<!-- Nossa metodologia - Custom Section -->
<WidgetWrapper
  containerClass="max-w-7xl mx-auto"
>
  <Fragment slot="bg">
    <div class="absolute inset-0 bg-gray-50 dark:bg-transparent"></div>
  </Fragment>
  
  <Headline
    title={methodology.title}
    tagline="Nossa abordagem"
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <div class="md:flex md:gap-16">
      <div class="md:basis-1/2 self-center">
        <div class="mb-12 text-lg dark:text-slate-400" set:html={methodology.content} />

        <!-- Custom Items Grid with custom colors -->
        <div class="gap-y-4 md:gap-y-8 grid">
          {methodology.highlights.map(highlight => (
            <div class="flex items-start">
              <div class="flex h-7 w-7 items-center justify-center rounded-full text-gray-50 p-1 flex-shrink-0" style="background-color: #046a80;">
                <astro-icon name="tabler:check" class="w-4 h-4" />
              </div>
              <div class="text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2">
                {highlight}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</WidgetWrapper>